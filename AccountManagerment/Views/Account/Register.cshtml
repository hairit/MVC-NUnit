@model AccountManagerment.Models.Account
@{
    ViewBag.Title = "Register";
}
<div>
    @using (Html.BeginForm("Register", "Account" , FormMethod.Post , new {@class = "register-form" }))
    {
        @Html.ValidationSummary(true, "" , new { @class = "text-danger" })
        <div>
            <div class="title">Email:</div>
            <div>
                @Html.TextBoxFor(acc => acc.Email , new {@class = "form-input" , @id ="email-input" , @onkeyup = "checkForm();" } )
                @ViewData["email-error"]
                @Html.ValidationMessageFor(account => account.Email, "", new { @class = "text-danger" })
            </div>
        </div>
         <div>
            <div class="title">Your name:</div>
            <div>
                @Html.TextBoxFor(acc => acc.Fullname , new {@class = "form-input" , @id ="name-input" , @onkeyup = "checkForm();"})
                @ViewData["fullName-error"]
                @Html.ValidationMessageFor(account => account.Fullname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <div>
                <input id="handle-submit" type="submit" disabled="disabled" onsubmit="" >
            </div> 
        </div>
     }
    @{
            if (ViewBag.errors != null)
            {
              <div>@ViewBag.errors.Count</div>    
            }
        }
</div>